/* originally a stylus file */
transition(args...)
  transition: args
  -o-transition: args
  -moz-transition: args
  -webkit-transition: args

transform(args...)
  transform: args
  -o-transform: args
  -moz-transform: args
  -webkit-transform: args

@font-face
  font-family: 'Source Code Pro'
  src: url('SourceCodePro-Light.ttf.woff2') format('woff2')

darkerGrey = darken(grey, 20%)

*, *:before, *:after
  box-sizing: border-box

html
  height: 93%
  width: 100%
  overflow: hidden

body
  color: white
  background-color: darkerGrey
  margin: 0
  overflow: auto
  padding: 0
  -webkit-overflow-scrolling: none

::-webkit-scrollbar
  width: 8px
  height: 8px

::-webkit-scrollbar-corner, ::-webkit-resizer
  display: none

::-webkit-scrollbar-track
  background: none

::-webkit-scrollbar-thumb
  border-radius: 10px
  background: white

#tabs, #tabConts
  height: 100vh
  display: flex
  flex-direction: column

#tabHeaders
  background-color: darken(darkerGrey, 15%)
  display: inline-block

.sidebar
  display: flex
  flex-direction: column
  height: 100vh
  max-width: 200px
  float: left
  vertical-align: top
  margin-left: 3px
  margin-right: 3px

.sidebarHeader
  width: 100%
  border-bottom: 2px solid black
  margin-left: 5px
  margin-right: 5px
  margin-top: 1px
  padding-bottom: 2px

.sidebarToolContainer
  padding-top: 5px
  padding-bottom: 5px
  padding-left: 7px
  padding-right: 7px

.sidebarItemContainer
  overflow: scroll

.sidebarFile, .sidebarTool, .sidebarFolder
  display: inline-block

.sidebarTool
  padding-left: 0.5px
  padding-right: 0.5px

.space
  height: 20px

.activeTab
  border-bottom: 3px solid lightblue

.tabName
  max-width: 300px
  display: inline-block
  overflow: hidden
  text-overflow: ellipsis

.linkStyle
  transition all 0.2s
  font-weight: bold
  &:hover
    color: blue
    cursor: pointer

.close
  transition all 0.2s
  margin-left: 3px
  margin-right: 3px
  font-weight: bold
  color: red
  position: absolute
  top: 0
  right: 0
  &:hover
    cursor: pointer

.dialogOverlay
  transition all 0.4s
  background-color: black
  opacity: 0
  position: fixed
  visibility: hidden
  top: 0
  left: 0
  width: 100%
  height: 100%

.dialogBox
  transition all 0.5s
  visibility: hidden
  opacity: 0
  background-color: darkerGrey
  z-index: 10
  border-radius: 3px
  padding: 3px
  padding-top: 13px
  padding-right: 16px
  display: inline-block
  border: 1px solid black
  position: fixed
  .dialogClose
    color: white
    &:hover
      color: red

.tabCont
  display: none
  height: 100%

.activeCont
  display: flex
  flex-direction: column

.tab
  text-align: center
  height: 100%
  box-sizing: border-box
  border-right: 1px solid black
  padding-left: 5px
  padding-right: 5px
  padding-top: 5px
  padding-bottom: 5px
  display: inline-block
  vertical-align: middle
  .tabClose
    transition all 0.2s
    visibility: hidden
    opacity: 0
    position: initial
    float: right
  &:hover .tabClose
    visibility: visible
    opacity: 1
    cursor: pointer
    color: red

.lines
  overflow: scroll
  outline: none !important
  font-family: 'Source Code Pro'
  height: 100%

.char
  padding-left: 1px
  padding-right: 1px

.line
  display: block
  background-color: darkerGrey

.activeLine
  background-color: lighten(darkerGrey, 20%)

// a little on the hackish side: (but it works!)
.line:after
  content: '.'
  visibility: hidden

@keyframes cursorAnimation
  for i in 0..5
    {10% * i}
      border-left: 2px solid lightblue
  for i in 6..10
    {10% * i}
      border-left: 2px solid transparent

.lineCursor
  animation: cursorAnimation 1s linear infinite

@keyframes spinnerRotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
